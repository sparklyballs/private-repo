<?xml version="1.0" encoding="utf-8"?>
<Container>
<Name>Koma</Name>
<Description>
Integrated kodi and mariadb container</Description>
<Registry>https://registry.hub.docker.com/u/sparklyballs/12.04-kodi-headless/</Registry>
<Repository>sparklyballs/12.04-kodi-headless</Repository>
<BindTime>true</BindTime>
<Privileged>true</Privileged>
<Networking>
<Mode>bridge</Mode>
<Publish>
<Port>
<HostPort>8092</HostPort>
<ContainerPort>8080</ContainerPort>
<Protocol>tcp</Protocol>
</Port>
</Publish>
</Networking>
<Environment>
<Variable>
<Name></Name>
<Value></Value>
</Variable>
</Environment>
<Data>
<Volume>
<HostDir></HostDir>
<ContainerDir>/opt/kodi-server/share/kodi/portable_data</ContainerDir>
<Mode>rw</Mode>
</Volume>
<Volume>
<HostDir></HostDir>
<ContainerDir>/config</ContainerDir>
<Mode>rw</Mode>
</Volume>
</Data>
<WebUI>http://[IP]:[PORT:]</WebUI>
<Banner>http://i.imgur.com/MAY6pir.png</Banner>
<Icon>http://i.imgur.com/rqpofWj.png</Icon>
</Container>
